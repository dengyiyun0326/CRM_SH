@model List<WebApi_OfficeServer_SH.Models.CaseQueue>
@{int j; int m = 0;}

@for (var i = 0; ; i++)
{
    if (!Model.Any())
    {
        <h4 class="text-center" style="color:darkgrey">No case in queue now. Have a relax :)</h4>
        break;
    }

    <div class="row">
        @for (j = 0; j < 4; j++)
         {
        <div class="col-md-3">
            <hr />
            <!--Bypass and Assgined-->
            @if (Model[i + j + m].IfAssign == "true")
    {
        <h4 class="text-center" style="color:darkblue;">@Html.DisplayFor(item => Model[i + j + m].CaseId)</h4>
        <h4 style="color:darkblue">SLA: @Html.DisplayFor(item => Model[i + j + m].EndTimeSla)</h4>
        <p style="color:darkblue">Title: @Html.DisplayFor(item => Model[i + j + m].CustomerTitle)</p>
        <b style="color:darkblue">Country: @Html.DisplayFor(item => Model[i + j + m].CallingCountry)</b>
        <p style="color:darkblue">Queue: @Html.DisplayFor(item => Model[i + j + m].BelongQueue)</p>
        <h3 style="color:darkblue">Assigned</h3>
}
else if (Model[i + j + m].IfBypass == "true")
{
        <h4 class="text-center" style="color:grey;">@Html.DisplayFor(item => Model[i + j + m].CaseId)</h4>
        <h4 style="color:grey">SLA: @Html.DisplayFor(item => Model[i + j + m].EndTimeSla)</h4>
        <p style="color:grey">Title: @Html.DisplayFor(item => Model[i + j + m].CustomerTitle)</p>
        <b style="color:grey">Country: @Html.DisplayFor(item => Model[i + j + m].CallingCountry)</b>
        <p style="color:grey">Queue: @Html.DisplayFor(item => Model[i + j + m].BelongQueue)</p>
        <h3 style="color:slategrey">Bypassed</h3>
}
else
{
        <h4 class="text-center" style="color:darkblue;">@Html.DisplayFor(item => Model[i + j + m].CaseId)</h4>
        <h4 style="color:red">SLA: @Html.DisplayFor(item => Model[i + j + m].EndTimeSla)</h4>
        <p class="lead">Title: @Html.DisplayFor(item => Model[i + j + m].CustomerTitle)</p>
        <b>Country: @Html.DisplayFor(item => Model[i + j + m].CallingCountry)</b>
        <p>Queue: @Html.DisplayFor(item => Model[i + j + m].BelongQueue)</p>
        @Html.ActionLink("Assign", "Assigned", new { id = Model[i + j + m].CaseId }, new { @class = "btn btn-success", @style="margin-right:5px"})
        @Html.ActionLink("Bypass", "Bypassed", new { id = Model[i + j + m].CaseId }, new { @class = "btn btn-warning" })
}
        </div>

            if (Model[i + j + m].Equals(Model.LastOrDefault()))
            {
                break;
            }
         }
    </div>

    if (Model[i + j + m].Equals(Model.LastOrDefault()))
    {
        break;
    }

    m = m + 3;
}

