                            <td>SR Title</td>
                            <td>Last Communication</td>
                            <td>Days Open</td>
                            <td>Labor</td>
                            <td>Idle Days</td>
                        </tr>
                        @foreach (var item in Model.Where(m => m.OwnerAlias == x.Alias && m.WaitState == "Pending CTS"))
                        {
                            if (Int32.Parse(item.IdleDays) > 5)
                            {
                                <tr>
                                    <td style="color:red">@Html.DisplayFor(p => item.CaseId)</td>
                                    <td style="color:red">@Html.DisplayFor(p => item.CaseTitle)</td>
                                    <td style="color:red">@Html.DisplayFor(p => item.LastCommTime)</td>
                                    <td style="color:red">@Html.DisplayFor(p => item.OpenDays)</td>
                                    <td style="color:red">@Html.DisplayFor(p => item.Labor)</td>
                                    <td style="color:red">@Html.DisplayFor(p => item.IdleDays)</td>
                                </tr>
                            }
                            else
                            {
