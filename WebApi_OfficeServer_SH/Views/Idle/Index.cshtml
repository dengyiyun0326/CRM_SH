                    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="@("#collapse"+i)" aria-expanded="false" aria-controls="@("collapse"+i)">
                        @alias_name_dic[x.Alias]   ---   Case Amount:@x.Count
                    </a>
                </h4>
            </div>
            <div id="@("collapse"+i)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@(i+"heading")">
