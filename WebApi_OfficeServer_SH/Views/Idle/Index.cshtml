                                <td>@Html.DisplayFor(p => item.Labor)</td>
                                <td>@Html.DisplayFor(p => item.IdleDays)</td>
                            </tr>
                        }
                    </table>
                    <h4 class="text-center" style="color:darkblue">Solution Delivered - Pending confirmation</h4>
                    <table class="table table-bordered table-striped table-responsive">
                        <tr>
                            <td>Case ID</td>
                            <td>SR Title</td>
                            <td>Last Communication</td>
                            <td>Days Open</td>
                            <td>Labor</td>
                            <td>Idle Days</td>
                        </tr>
                        @foreach (var item in Model.Where(m => m.OwnerAlias == aliasList[i] && m.WaitState == "Solution Delivered - Pending Confirmation"))
                        {
